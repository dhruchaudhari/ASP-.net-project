@model FoodDTO
@{
    Layout = "_AdminLayout";
}
<div style="width:50%">
    <h2> Add Food </h2>
    <a asp-action="Index" asp-controller="Food" class="btn btn-primary">Back</a>
    <form asp-action="AddFood" enctype="multipart/form-data">
        @* <input type="hidden" asp-for="Id" /> *@

        <div class="my-2">
            <label>Food*</label>
            <input type="text" class="form-control" asp-for="FoodName" />
            <span asp-validation-for="FoodName" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Restorant*</label>
            <input type="text" class="form-control" asp-for="RestorantName" />
            <span asp-validation-for="RestorantName" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Cuisine*</label>
            <select class="form-control" asp-for="CuisineId" asp-items="Model.CuisineList">
                <option value="">Select Cuisine</option>
            </select>
            <span asp-validation-for="CuisineId" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Price*</label>
            <input type="number" class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Image</label>
            <input type="file" class="form-control" asp-for="ImageFile" />
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-info">Add</button>
        </div>
    </form>
</div>
